<div class="container-fluid content">

<div id="content" class="col-sm-12 full">
<div class="row">
<div class="login-box">
  <%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post, :role => 'form'}) do |f| %>
    <div class="header">
    Forgot your password?
  </div>
    <span class="help-block">We'll send password reset instructions.</span>
    <%= devise_error_messages! %>

    <div class="col-sm-12">
    <div class="form-group">
      <div class="controls row">
        <div class="input-group col-sm-12">
        <span class="input-group-addon"><i class="fa fa-envelope-o"></i></span>
      <%= f.email_field :email, :autofocus => true, class: 'form-control' , placeholder: "type your email" %>
        </div>
      </div>
    </div>
  </div>
  <div class="text-center">
     <%= f.submit 'Reset Password', :class => 'btn btn-primary right' %>
   </div>
  <% end %>
</div>
</div>
</div>
</div>
