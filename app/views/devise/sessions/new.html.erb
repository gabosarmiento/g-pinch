<div class="container-fluid content">
  <div class="row">
  <div id="content" class="col-sm-12 full">
  <div class="row">
  <div class="login-box">
  <%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => { :role => 'form', :class => "form-horizontal login"}) do |f| %>
  <div class="header">
  Log in
  </div>
  <%= devise_error_messages! %>
  <p>
  <!-- Facebook button -->
  <%- if devise_mapping.omniauthable? %>
  <%- resource_class.omniauth_providers.each do |provider| %>
    <%= link_to "Sign in with #{provider.to_s.titleize}", omniauth_authorize_path(resource_name, provider), class: "btn btn-facebook" %>
  <% end -%>
  <% end -%>
  </p>
  <div class="text-with-hr">
            <span>or use your email</span>
          </div>
  <fieldset class="col-sm-12">
    <div class="form-group">
      <div class="controls row">
        <div class="input-group col-sm-12">
          <%= f.email_field :email, autofocus: true, class: 'form-control', id: "username" , placeholder: "email"%> <span class="input-group-addon"><i class="fa fa-envelope-o"></i></span>
        </div>
      </div>
    </div>
    <div class="form-group">
      <div class="controls row">
          <div class="input-group col-sm-12">
            <%= f.password_field :password, autocomplete: "off", class: 'form-control' , id: "password", placeholder: "password" %>
            <span class="input-group-addon"><i class="fa fa-key"></i></span>
        </div>
      </div>
    </div>

    <div class="confirm">
    <% if devise_mapping.rememberable? -%>
        <%= f.check_box :remember_me , name: "remember" %> <%= f.label :remember_me, for:"remember" %>
    <% end -%>
    </div>
    
    <div class="row">
     <%= f.submit 'Login', :class => 'btn btn-primary btn-lg col-xs-12' %>
    </div>
  </fieldset> 
  <% end %>
  <%- if devise_mapping.recoverable? %>
    <%= link_to "Forgot Password?", new_password_path(resource_name), class: 'pull-left' %>
  <% end -%> 

 <%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
<%= link_to "Didn't receive confirmation email?", new_confirmation_path(resource_name), class: 'pull-right' %>
<% end -%>
  <div class="clearfix"></div>
  </div>
</div><!--/row-->
    
</div>  
      
</div><!--/row--> 
</div><!--/container-->

