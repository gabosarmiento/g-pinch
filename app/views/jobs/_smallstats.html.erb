<div class="row">
  <div class="col-lg-12">
    <% unless @jobs.empty? %>
    <div class="col-lg-3 col-sm-6 col-xs-6 col-xxs-12">
      <div class="smallstat">
        <i class="fa-heart white"></i>
        <span class="value"> - </span>
        <span class="title">Reputation</span>
      </div>
    </div>
    <div class="col-lg-3 col-sm-6 col-xs-6 col-xxs-12">
      <div class="smallstat">
        <i class=" fa-thumb-tack white"></i>
        <span class="value"> - </span>
        <span class="title">Jobs accepted</span>
      </div>
    </div>
    <div class="col-lg-3 col-sm-6 col-xs-6 col-xxs-12">
      <div class="smallstat">
        <i class="fa-star white"></i>
        <span class="value"><%= current_user.jobs.completed.count %></span>
        <span class="title">Completed</span>
      </div>
    </div>
    <div class="col-lg-3 col-sm-6 col-xs-6 col-xxs-12">
      <div class="smallstat">
        <i class="fa-bitcoin white"></i>
        <span class="value">$ 0</span>
        <span class="title">Balance</span>
      </div>
    </div>
   
    <% else %>
      <div class="col-lg-12">
        <div class="row">
          <div class="col-sm-6">
            Box 1 : <%= link_to "meet experts", profile_index_path, class: "btn btn-default" %> for hire 
          </div>
          <div class="col-sm-6">
            Box 2: <%= link_to "Upload", portfolios_path, class: "btn btn-default" %> portfolio for revision
          </div>
        </div>
         
      </div>
    <% end %>
  </div>
</div>