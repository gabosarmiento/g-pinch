<div class="row">
  <div class="col-lg-12">
    <% unless @jobs.empty? %>
    <div class="col-lg-3 col-sm-6 col-xs-6 col-xxs-12">
      <div class="smallstat">
        <i class="fa-heart white"></i>
        <span class="value"> - </span>
        <span class="title">Reputation</span>
      </div>
    </div>
    <div class="col-lg-3 col-sm-6 col-xs-6 col-xxs-12">
      <div class="smallstat">
        <i class=" fa-thumb-tack white"></i>
        <span class="value"> - </span>
        <span class="title">Jobs accepted</span>
      </div>
    </div>
    <div class="col-lg-3 col-sm-6 col-xs-6 col-xxs-12">
      <div class="smallstat">
        <i class="fa-star white"></i>
        <span class="value"><%= current_user.jobs.completed.count %></span>
        <span class="title">Completed</span>
      </div>
    </div>
    <div class="col-lg-3 col-sm-6 col-xs-6 col-xxs-12">
      <div class="smallstat">
        <i class="fa-bitcoin white"></i>
        <span class="value">$ 0</span>
        <span class="title">Balance</span>
      </div>
    </div>
   
    <% else %>
      <div class="col-lg-12">
        <div class="row">
          <div class="col-sm-6">
            Box 1 : <%= link_to "meet experts", profile_index_path, class: "btn btn-default" %> for hire 
          </div>
          <div class="col-sm-6">
            Box 2: <%= link_to "Upload", portfolios_path, class: "btn btn-default" %> portfolio for revision
          </div>
        </div>
         
      </div>
    <% end %>
  </div>
</div>
<!-- jobs panel begin --> 
<div class="row">    
  <div class="col-sm-12">
    <div class="panel panel-default">
      <div class="panel-heading" data-original-title>
        <h2><span class="break"></span>The list of users needing your help</h2>
      </div>
      <% unless @jobs.empty? %>
        <table class="table table-striped table-bordered bootstrap-datatable datatable">
          <thead>
            <tr>
              <th>User</th>
              <th class="text-center">Portfolio</th>
              <th class="text-center">Photos</th>
              <th class="text-center">Status</th>
              <th>Actions</th>
              <th>Date of assignment</th>
              <th>updated</th>
            </tr>
          </thead>   
          <tbody>
            
            <% @jobs.each do |job| %>
            <tr>
              <td><%# image_tag( job.portfolio.user.avatar.small.url ) if job.portfolio.user.avatar?  %>
                <%= link_to job.portfolio.user.name, job.portfolio.user %>
              </td>
              <td class="text-center" style="vertical-align:middle"><%= link_to job.portfolio.name, job.portfolio %></td>
              <td class="text-center" style="vertical-align:middle"><%= job.portfolio.photos.count %></td>
              <td class="text-center" style="vertical-align:middle">
                <% case job.state %>
                   <% when 'new' %>
                    <span class="label label-info">new</span> 
                   <% when 'seen' %>
                    <span class="label label-default">seen</span> 
                   <% when 'active' %>
                     <span class="label label-warning">evaluating</span> 
                   <% when 'canceled' %>
                    <span class="label label-danger">rejected</span>
                    <% when 'inactive' %>
                    <span class="label label-default" data-rel="tooltip" title="Updated status due to lack of response">unresponded</span>
                    <% when 'finished' %>
                    <span class="label label-success">completed</span>
                   <% else %>
                    <span class="label label-danger">not available</span>
                 <% end %>
              </td> 
              <td>
                 <% case job.state %>
                    <% when 'new' %>
                    <%= link_to view_job_path(job), class: "btn btn-primary", data: {rel: "tooltip", title: "See photos"} do %>
                    <i class="fa fa-eye"></i>
                    <% end %>
                    
                    <% when 'seen' %>
                    <%= link_to accept_job_path(job), class: "btn btn-success", data: {rel: "tooltip", title: "Accept request"} do %>
                    <i class="fa fa-check-square-o"></i>
                    <% end %>
                    <%= link_to reject_job_path(job), class: "btn btn-danger", data: {rel: "tooltip", title: "Reject request"} do %>
                    <i class="fa fa-ban "></i>
                    <% end %>
                    <% when 'active' %>
                    <%= link_to job_evaluations_path(job), class: "btn btn-info", data: {rel: "tooltip", title: "Start to pinch"} do %>
                    <i class="fa fa-thumb-tack"></i>
                    <% end %>

                    <%= link_to complete_job_path(job), class: "btn btn-primary", data: {rel: "tooltip", title: "Mark as complete"} do %>
                    <i class="fa fa-check"></i>
                    <% end %>
           
                    <% else %>
                    No actions to perform
                    <% end %>              
              </td>
              <td style="vertical-align:middle"><%=  time_ago_in_words(job.created_at) %></td>
              <td style="vertical-align:middle"><%=  time_ago_in_words(job.updated_at) %></td>     
            </tr>
            <% end %>
          </tbody>
        </table>
      <% else %>
      <div class="panel-body">
        User doesn't have any jobs yet.
      </div>
      <% end %>
    </div>
  </div><!--/col-->
</div><!-- /row jobs panel ends-->
