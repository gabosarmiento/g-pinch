          <li><%= link_to "sales", sales_path %></li>
          <% end %>
        </ul>
        <% end %>
        <!-- <ul class="nav-bar nav-center">
          <li><%= link_to "#", class: "btn btn-default" do %>subscribe now!<% end %></li>
        </ul> -->
