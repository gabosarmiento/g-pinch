            <% if current_user %>
            <li><div class="user-info"> 
              Hola! <%= link_to (current_user.name || current_user.email), edit_user_registration_path %><i id="avatar"> <%= image_tag(current_user.avatar.tiny.url) if current_user.avatar? %></i></div></li>
            <li><%= link_to "Sign out", destroy_user_session_path, method: :delete %></li>
             <% else %>
            <li><%= link_to "Home", root_path %></li>
