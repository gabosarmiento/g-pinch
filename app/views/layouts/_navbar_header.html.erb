<header class="navbar navbar-fixed-top navbar-inverse" role="navigation">
  <div class="navbar-inner">
  <div class="container">
    <div class="navbar-header">
        <%= link_to root_path, class: 'navbar-brand', id: 'logo' do %>
        Pepperpinch
        <% end %>
    </div>
    <nav>
        <% if current_user %>
        <ul class="nav navbar-nav navbar-actions navbar-left">
          <li><%= link_to "manage", portfolios_path %>
          </li>
          <li><%= link_to "experts", profile_index_path%>
          </li>
          <li><%= link_to "explore", gallery_path %></li>
