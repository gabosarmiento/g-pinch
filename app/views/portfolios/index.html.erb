<div class="row">
  <div class="col-sm-3">
    <div class="row">
      <div class="panel panel-default">
        <div class="panel-heading">
          Portfolios under evaluation
          <span class="badge pull-right"><span class="js-commisioned-count"><%= @commissioned.count %></span></span>
        </div>
        <div class="panel-body">
          <div class="col-sm-12">
            <ul class="panel-portfolios">
             <% @portfolios.each do |portfolio| %>
            <% unless portfolio.jobs.empty? %>
            <li><%= link_to portfolio.name, jobs_path %><span class="badge pull-right"><%= portfolio.jobs.where(portfolio_id: portfolio.id).count %></span>
            </li>
            <% end %>
            <% end %>
            </ul>
          </div>
        </div>
      </div><!-- panel -->
    </div>
    <div class="row">
      <div class="panel panel-default">
        <div class="panel-heading">
          Portfolios
          <span class="badge pull-right"><span class="js-portfolios-count"><%= @portfolios.count %></span></span>
        </div>
        <% unless @portfolios.count == 0 %>
        <div class="panel-body">
          <div class="col-sm-12">
            <!-- user portfolios list -->
            <ul class="js-portfolios">
            <%= render @portfolios %>
            </ul>
            </div>
        </div>
        <% else %>
        <div class="panel-body">
          <div class="col-sm-12">
            <div class="row">
              <ul class="js-portfolios">
              </ul>
            </div>
          </div>
        </div>
        <% end %>
      </div>
    </div><!-- row -->
  </div><!-- col-sm-3-->
  <div class="col-sm-9">
    <% if policy(@portfolio).create? %>
    <div class="row">
      <div class="js-new-portfolio">
        <%= render partial: '/portfolios/form', locals: { portfolio: @portfolio } %>
      </div>
    </div>
    <% end %> 
    <div class="row">
      <div class="col-sm-12">
      <div class="panel panel-default">
        <div class="panel-heading js-photo-show">
          <i class="fa fa-camera"></i><span class="break"></span> Photos
        </div>
        <div class="panel-body">
          <div class="js-new-portfolios-photos">
          </div>
          <div class="js-wrapper">
            <div class="js-action-show jcarousel" data-jcarousel="true">
            </div>
          </div>
          
        </div>
      </div><!-- /panel -->
      </div>
    </div><!-- /row -->
  </div><!-- col -->
</div><!-- /row -->

<%= render 'photos/scripts' %>


<%= javascript_include_tag 'jquery.jcarousel' %>