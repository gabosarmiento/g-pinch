<div class="row">
  <div class="col-sm-3">
    <div class="row">
      <div class="panel panel-default">
        <div class="panel-heading">
          Portfolios
          <span class="badge pull-right"><span class="js-portfolios-count"><%= @portfolios.count %></span></span>
        </div>
        <% unless @portfolios.count == 0 %>
        <div class="panel-body">
          <div class="col-sm-12">
            <!-- user portfolios list -->
            <ul class="js-portfolios">
            <%= render @portfolios %>
            </ul>
            </div>
        </div>
        <% else %>
        <div class="panel-body">
          <div class="col-sm-12">
            <div class="row">
              <ul class="js-portfolios">
              </ul>
            </div>
          </div>
        </div>
        <% end %>
      </div>
    </div>
  </div>
  <div class="col-sm-9">
    <% if policy(@portfolio).create? %>
    <div class="row">
      <div class="js-new-portfolio">
        <%= render partial: '/portfolios/form', locals: { portfolio: @portfolio } %>
      </div>
    </div>
    <% end %> 
    <div class="row">
      <div class="col-sm-12">
        <div class="panel panel-default">
          <div class="panel-heading">
          Photos
          </div>
          <div class="panel-body">
              <div class="js-portfolios-photos">
                Photos goes here
              </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
var ready;
ready = function() { 
    $('.switch').bootstrapSwitch();
};
$(document).ready(ready);
$(document).on('page:load', ready);
</script>