<%= form_for @profile do |f| %>
<% if @profile.errors.any? %>
  <div class="error_messages">
    <h2><%= pluralize(@profile.errors.count, "error") %> prohibited this user from being saved:</h2>
    <ul>
    <% @profile.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>
<div class="col-sm-12">
    <div class="form-group">
      <%= f.label :title, class: "control-label" %>
      <%= f.text_field :title, class: "form-control", placeholder: "Who are you in one phrase" %>
    </div>
    <div class="form-group">
      <%= f.label :country, class: "control-label" %>
      <%= f.text_field :country, class: "form-control", placeholder: "Your nationality" %>
    </div>
    <div class="form-group">
      <%= f.label :website, class: "control-label" %>
      <%= f.text_field :website, class: "form-control", placeholder: "The webpage that best describes you or a piece of your work" %>
    </div>
    <div class="form-group">
      <%= f.label :bio, class: "control-label" %>
      <%= f.text_area :bio, class: "form-control", placeholder: "Tell us who you are in one paragraph or 400 characters" %>
    </div>
    <div class="form-group">
      <%= f.label :experience, class: "control-label" %>
      <%= f.text_area :experience, class: "form-control", placeholder: "Tell us what you've done in one paragraph or 400 characters" %>
    </div>
    <div class="form-group">
      <%= f.label :header, 'Your header Image'%>
      <%= f.file_field :header %>
    </div>
    <div class="form-group">
      <%= f.label :footer, 'Your footer Image'%>
      <%= f.file_field :footer %>
    </div>
    <div class="form-group">
      <%= f.label :separator, 'Your separator Image'%>
      <%= f.file_field :separator %>
    </div>
    <div class="form-group">
      <%= f.label :pic, 'Your selfie Image without background'%>
      <%= f.file_field :pic %>
    </div>

    <%= f.submit 'Save', class: 'btn-lg btn-success' %>
    
</div>
  <% end %>

