<section id="home" name="home"></section>
  <% if @profile.header? %>
  <div id="headerwrap" style="background: url(<%= @profile.header.normal.url %>) no-repeat center top;">
  <% else %>
   <div id="headerwrap" style="background: url(<%= @profile.header.default_url %>) no-repeat center top;">
  <% end %>
    <div class="container">
      <div class="row">
        <div class="col-md-6 col-md-offset-3">
          <h1> <%= @profile.user.name %></h1>
        </div>
      </div><! --/row -->
    </div><! --/container -->
  </div><! --/headerwrap -->

  <section id="about" name="about"></section>
  <div id="aboutwrap">
    <div class="container">
      <div class="row">
        <div class="col-lg-4 name">
          <% if @profile.pic? %>
          <%= image_tag(@profile.pic.normal.url , class: "img-responsive") %>
          <% else %>
          <%= image_tag(@profile.pic.default_url) %>
          <% end %>
          <p><%= @user.name %></p>
          <div class="name-label"></div>
          <div class="col-sm-12 text-center">
            <a href="#" class="js-show-hide btn btn-default" data-selector="js-hire"><h3> Hire Me Now!</h3></a>
          </div>
          <div class="js-hire hide">
            <% if @portfolios.empty? %>
            <p>First <%= link_to "create", portfolios_path %> a portfolio</p>
            <% else %>
            <div class="col-sm-12 text-center">
             <%= render partial: "/jobs/form", locals: {portfolios: @portfolios, job: @job, judge: @profile.user} %>
            </div>
            <% end %>
          </div>
        </div><! --/col-lg-4-->
        <div class="col-lg-8 name-desc">
          <h2><%= @profile.title %></h2>
          <div class="name-zig"></div>
          
          <div class="col-md-6">
            <p><%= @profile.bio %></p>
          </div>
          <div class="col-md-6">
            <p><%= @profile.experience %></p>
          </div>
          
        </div><! --/col-lg-8-->
    
      </div><!-- /row -->
    </div><!-- /container -->
  </div><!-- /aboutwrap -->
  
  <! -- ABOUT SEPARATOR -->
  <% if @profile.separator? %>
  <div class="sep about" data-stellar-background-ratio="0.5" style="background-image: url(<%= @profile.separator.normal.url %>);"></div>
  <% else %>
  <div class="sep about" data-stellar-background-ratio="0.5" style="background-image: url(<%=  @profile.separator.default_url %>);"></div>
  <% end %>
  <! -- PORTFOLIO SECTION -->
  <section id="portfolio" name="portfolio"></section>
  <div id="portfoliowrap">
    <div class="container">
      <div class="row">
        <h1>SOME OF MY LATEST WORKS</h1>
      </div><! --/row -->
    </div><! --/container -->
  </div><! --/Portfoliowrap -->

  <! -- FOOTER SEPARATOR -->
  <% if @profile.footer? %>
  <div class="sep portfolio" data-stellar-background-ratio="0.5" style="background-image: url(<%= @profile.footer.normal.url %>);"></div>
  <% else %>
   <div class="sep portfolio" data-stellar-background-ratio="0.5" style="background-image: url(<%= @profile.footer.default_url %>);"></div>
  <% end %>

  <div id="contactwrap">
    <div class="container">
      <div class="row">
        <div class="col-lg-6">
          <p>INTERESTED IN HIRING <%= @profile.user.name %>?</p>
        </div>
        
        <!-- <div class="col-lg-6">
          <form role="form">
            <div class="form-group">
              <label for="exampleInputName1">Your Name</label>
              <input type="email" class="form-control" id="exampleInputEmail1" placeholder="Enter name">
              <label for="exampleInputEmail1">Email address</label>
              <input type="email" class="form-control" id="exampleInputEmail1" placeholder="Enter email">
              <label for="exampleInputText1">Message</label>
              <textarea class="form-control" rows="3"></textarea>
            </div>
            <button type="submit" class="btn btn-default">Submit</button>
          </form>
        </div> -->
      
      </div><! --/row -->
    </div><!-- /container -->
  </div>
<script src="/assets/jquery.stellar.min.js"></script>
<script>
    $(function(){
      $.stellar({
        horizontalScrolling: false,
        verticalOffset: 40
      });
    });
    </script>
<script>
$(".js-show-hide").click(function() {
    var selector = "." + $(this).attr('data-selector');
    if($(selector).is(":visible")) {
      $(selector).removeClass('hide').slideUp();
    }
    else {
      $(selector).hide().removeClass('hide').slideDown();
    }
    return false;
  });
</script>
